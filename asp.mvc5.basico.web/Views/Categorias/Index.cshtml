@model IEnumerable<asp.mvc5.basico.web.Models.Categoria>

@{
    ViewBag.Title = "Categorias Cadastradas";
}

<h2>Categorias Cadastradas</h2>

<p>
    @Html.ActionLink("Novo","Novo")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdCategoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>
 @foreach (var item in Model)
 {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdCategoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.ActionLink("Alterar", "Alterar", new { id = item.IdCategoria }) |
            @Html.ActionLink("Detalhes", "Detalhes", new { id = item.IdCategoria }) |
            @Html.ActionLink("Excluir", "Excluir", new { id = item.IdCategoria })
        </td>
    </tr>


 }   

</table>